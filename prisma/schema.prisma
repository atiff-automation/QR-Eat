// REAL-TIME EVENTS
// ============================

// Event persistence for reliable SSE delivery
// Stores all order-related events for catchup on reconnection
// @see claudedocs/SSE_REAL_TIME_SYSTEM_FIX.md - Phase 2
model PendingEvent {
  id           String    @id @default(uuid())
  eventType    String    @db.VarChar(50)
  eventData    Json      @db.JsonB
  restaurantId String    @db.Uuid
  createdAt    DateTime  @default(now())
  deliveredAt  DateTime?

  // Query optimization indexes
  @@index([restaurantId, createdAt], name: "idx_restaurant_pending")
  @@index([createdAt], name: "idx_cleanup")
  @@map("pending_events")
}

// ============================
// ORDER MODIFICATIONS
// ============================

// Tracks all modifications made to orders including cancellations
model OrderModification {
  id         String   @id @default(uuid())
  orderId    String
  modifiedBy String? // Can be any user type (platform_admin, restaurant_owner, staff)
  modifiedAt DateTime @default(now())

  // Modification details
  reason      String // 'out_of_stock', 'customer_request', 'kitchen_error', 'other'
  reasonNotes String? @db.Text

  // Financial tracking
  oldTotal Decimal @db.Decimal(10, 2)
  newTotal Decimal @db.Decimal(10, 2)

  // Customer notification
  customerNotified Boolean   @default(false)
  notifiedAt       DateTime?

  // Idempotency (prevent duplicate modifications)
  idempotencyKey String @unique

  // Audit
  createdAt DateTime @default(now())

  // Relations
  order Order                   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  // Note: modifiedBy does NOT have a foreign key - it can be any user type
  items OrderModificationItem[]

  @@index([orderId])
  @@index([modifiedAt])
  @@index([idempotencyKey])
  @@map("order_modifications")
}

// Tracks specific item changes in modifications
model OrderModificationItem {
  id             String  @id @default(uuid())
  modificationId String
  orderItemId    String?
  menuItemId     String

  // Change tracking
  action      String // 'added', 'removed', 'quantity_changed'
  oldQuantity Int?
  newQuantity Int?
  oldPrice    Decimal? @db.Decimal(10, 2)
  newPrice    Decimal? @db.Decimal(10, 2)

  createdAt DateTime @default(now())

  // Relations
  modification OrderModification @relation(fields: [modificationId], references: [id], onDelete: Cascade)
  orderItem    OrderItem?        @relation(fields: [orderItemId], references: [id])
  menuItem     MenuItem          @relation(fields: [menuItemId], references: [id])

  @@index([modificationId])
  @@index([orderItemId])
  @@map("order_modification_items")
}


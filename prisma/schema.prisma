// ============================
// RBAC SYSTEM ENHANCEMENTS
// ============================

// Enhanced User Role System for RBAC
model UserRole {
  id                String   @id @default(uuid())
  userId            String
  userType          String // 'platform_admin', 'restaurant_owner', 'staff'
  restaurantId      String? // NULL for platform admins
  roleTemplate      String // 'platform_admin', 'restaurant_owner', 'manager', 'kitchen_staff'
  customPermissions Json     @default("[]") // Override permissions array
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations based on user type
  restaurant   Restaurant?   @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  userSessions UserSession[]

  @@index([userId])
  @@index([userType])
  @@index([restaurantId])
  @@index([roleTemplate])
  @@index([isActive])
  @@map("user_roles")
}

// Permission definitions
model Permission {
  id            String   @id @default(uuid())
  permissionKey String   @unique // 'orders:read', 'tables:write', etc.
  description   String
  category      String // 'orders', 'tables', 'staff', 'analytics', etc.
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())

  rolePermissions RolePermission[]

  @@index([permissionKey])
  @@index([category])
  @@index([isActive])
  @@map("permissions")
}

// Role-Permission mapping
model RolePermission {
  id            String   @id @default(uuid())
  roleTemplate  String // 'platform_admin', 'restaurant_owner', 'manager', 'kitchen_staff'
  permissionKey String
  grantedAt     DateTime @default(now())

  permission Permission @relation(fields: [permissionKey], references: [permissionKey], onDelete: Cascade)

  @@unique([roleTemplate, permissionKey])
  @@index([roleTemplate])
  @@index([permissionKey])
  @@map("role_permissions")
}

// Enhanced session management for RBAC
model UserSession {
  id                  String   @id @default(uuid())
  userId              String
  sessionId           String   @unique
  currentRoleId       String
  restaurantContextId String?
  jwtTokenHash        String? // Hash of JWT for validation
  permissions         Json     @default("[]") // Cached permissions array
  expiresAt           DateTime
  lastActivity        DateTime @default(now())
  ipAddress           String?
  userAgent           String?
  createdAt           DateTime @default(now())

  currentRole       UserRole    @relation(fields: [currentRoleId], references: [id], onDelete: Cascade)
  restaurantContext Restaurant? @relation(fields: [restaurantContextId], references: [id])

  @@index([userId])
  @@index([sessionId])
  @@index([currentRoleId])
  @@index([restaurantContextId])
  @@index([expiresAt])
  @@map("user_sessions")
}

// Refresh Token for Secure Token Rotation
// Following multi-user-type pattern (platform_admin, restaurant_owner, staff)
model RefreshToken {
  id        String @id @default(uuid())
  token     String @unique // Hashed token for security
  userId    String // Generic userId field
  userType  String // 'platform_admin', 'restaurant_owner', 'staff'
  sessionId String // Links to UserSession

  // Multi-user FK fields (following Payment model pattern)
  adminId String?
  ownerId String?
  staffId String?

  expiresAt  DateTime
  lastUsed   DateTime @default(now())
  ipAddress  String?
  userAgent  String?
  deviceInfo Json     @default("{}")

  // Security fields
  isRevoked     Boolean   @default(false)
  revokedAt     DateTime?
  revokedReason String?

  createdAt DateTime @default(now())

  // Relations
  admin PlatformAdmin?   @relation(fields: [adminId], references: [id], onDelete: Cascade)
  owner RestaurantOwner? @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  staff Staff?           @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([userType])
  @@index([sessionId])
  @@index([adminId])
  @@index([ownerId])
  @@index([staffId])
  @@index([expiresAt])
  @@index([isRevoked])
  @@map("refresh_tokens")
}

// Enhanced Audit Log for RBAC
model RBACLog {
  id        String   @id @default(uuid())
  userId    String
  action    String // 'LOGIN', 'ROLE_SWITCH', 'PERMISSION_DENIED', 'LOGOUT'
  resource  String? // '/dashboard/tables', 'orders:read', etc.
  fromRole  String? // Previous role for role switches
  toRole    String? // New role for role switches
  metadata  Json     @default("{}")
  ipAddress String?
  userAgent String?
  sessionId String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([sessionId])
  @@index([createdAt])
  @@map("rbac_logs")
}


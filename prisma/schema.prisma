// Provides shared cache across multiple Node.js processes
model CacheEntry {
  id        String   @id @default(uuid())
  key       String   @unique
  value     Json
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([expiresAt])
  @@index([key, expiresAt])
  @@map("cache_entries")
}

